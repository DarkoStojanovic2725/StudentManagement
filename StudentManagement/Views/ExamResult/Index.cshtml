@model IEnumerable<StudentManagement.Models.ExamResult>
@{
    ViewBag.Title = "Polaganja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Polaganja</h2>
<p>
    @Html.ActionLink("Novo polaganje", "NewExamResult", "Polaganje", null, new { @class = "btn btn-primary" })
</p>
@if (!Model.Any())
{
    <p>Nema polaganja!</p>
}
else
{
    <table id="polaganja" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Ocena</th>
                <th>Broj pokusaja</th>
                <th>Broj bodova</th>
                <td>Polozio?</td>
                <td>Student</td>
                <td>Naziv predmeta</td>
                <td>Datum ispita</td>
                <th>Brisanje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var polaganje in Model)
            {
                <tr> 
                    <td>@polaganje.Grade</td>
                    <td>@polaganje.NumberOfAttempts</td>
                    <td>@polaganje.Score</td>
                    <td>@polaganje.Passed</td>
                    <td>@Html.ActionLink(polaganje.Student.Email, "Edit", "Polaganje", new { id = polaganje.Id }, null)</td>
                    <td>@polaganje.Exam.Subject.Name</td>
                    <td>@polaganje.Exam.DateOfExam</td>

                    @*<td>
                        <button data-ispit-id="@polaganje.id" class="btn-link js-delete">Obrisi</button>
                    </td>*@
                    <td>@Html.ActionLink("Obrisi", "Delete", "Polaganje", new { id = polaganje.Id }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}
