@model StudentManagement.ViewModels.IspitFormViewModel

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>
@using (Html.BeginForm("Save", "Ispiti"))
{

    <div class="form-group">
        @Html.LabelFor(i => i.SubjectId)
        @Html.DropDownListFor(i => i.SubjectId, new SelectList(Model.Subjects, "Id", "Name"), "Izaberi predmet", new { @class = "form-control" })
        @Html.ValidationMessageFor(i => i.SubjectId)
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.DateOfExam)
        <div class="row">
            <div class='col-sm-6'>
                @Html.TextBoxFor(i => i.DateOfExam, new { @class = "form-control", @id = "datetimepicker2" })
            </div>
        </div>
        @Html.ValidationMessageFor(i => i.DateOfExam)
    </div>

    @Html.HiddenFor(i => i.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Sacuvaj</button>
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/css")

    <script type="text/javascript">
        $(function () {
            $('#datetimepicker2').datetimepicker({
                format: "DD-MMMM-YY HH:mm"
            });
        });
    </script>
}
