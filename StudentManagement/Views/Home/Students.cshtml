@model IEnumerable<StudentManagement.Models.ApplicationUser>

@{
    ViewBag.Title = "Studenti";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Studenti</h2>
<table id="ispitiStudenata" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailConfirmed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TwoFactorEnabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LockoutEndDateUtc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LockoutEnabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccessFailedCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                Brisanje
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="#" class="text-primary" data-toggle="popover" data-trigger="click" id="@item.Id">@item.Email</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailConfirmed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TwoFactorEnabled)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LockoutEndDateUtc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LockoutEnabled)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccessFailedCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.ActionLink("Obrisi", "Delete", "Home", new { id = item.Id }, new {@class = "text-primary"})
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{

    <script>
        $(document).ready(function () {

            $("#ispitiStudenata").DataTable();

            $('[data-toggle="popover"]').popover({
                trigger: 'focus',
                title: setData,
                html: true,
                placement: 'bottom'
            });

            function setData(id) {
                var set_data = '';
                var element = $(this);
                var id = element.attr("id");
                $.ajax({
                    url: "/Polaganje/StudentExams?studentId=" + id,
                    method: "post",
                    async: false,
                    data: { id: id },
                    success: function (data) {
                        set_data = data;
                    }
                });
                return set_data;
            }

        });
    </script>
}