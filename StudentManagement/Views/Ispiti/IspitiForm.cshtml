
@model StudentManagement.ViewModels.IspitFormViewModel

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>
@using (Html.BeginForm("Sacuvaj", "Ispiti"))
{
    <div class="form-group">
        @Html.LabelFor(i => i.predmetId)
        @Html.DropDownListFor(i => i.predmetId, new SelectList(Model.predmeti, "id", "naziv"), "Izaberi predmet", new { @class = "form-control" })
        @Html.ValidationMessageFor(i => i.predmetId)
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.datumIspita)
        @Html.TextBoxFor(i => i.datumIspita, new { @class = "form-control date-picker" })
        @Html.ValidationMessageFor(i => i.datumIspita)
    </div>

    @Html.HiddenFor(i => i.id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Sacuvaj</button>
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".date-picker").datepicker({
                dateFormat: 'dd-M-yy' 
            });

        });

    </script>
}
